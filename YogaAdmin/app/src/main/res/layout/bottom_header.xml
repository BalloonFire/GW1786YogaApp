<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#f8f8f8"
    android:orientation="horizontal"
    android:padding="4dp">

    <Button
        android:id="@+id/nav_teachers"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@android:drawable/ic_menu_myplaces"
        android:text="Teachers"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/nav_courses"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@android:drawable/ic_menu_agenda"
        android:text="Courses"
        android:textAllCaps="false" />

    <!-- Added Search Button -->
    <Button
        android:id="@+id/nav_search"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@android:drawable/ic_menu_search"
        android:text="Search"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/nav_settings"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@android:drawable/ic_menu_preferences"
        android:text="Settings"
        android:textAllCaps="false" />
</LinearLayout>